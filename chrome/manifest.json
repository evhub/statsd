{
    "manifest_version": 2,
    "name": "Statsd for Chrome",
    "description": "Runs Statsd in a Chrome Packaged App.",
    "version": "0.0.1",
    "minimum_chrome_version": "33",
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "sockets": {
        "udp": {
            "send": "",
            "bind": ""
        },
        "tcp": {
            "connect": ""
        }
    },
    "permissions": [
        {
            "socket": [
                       "udp-bind:*:*",
                       "udp-send:*:*",
                       "tcp-connect:*:*"
                       ]
            },
        "fileSystem",
        "experimental"
    ]
}
